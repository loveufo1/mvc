@model WebApplication2.Models.customer[]
@using WebApplication2.Models
@{
    ViewBag.Title = "List";
}

<h2 class="font-italic">客戶資料一覽</h2>
<table  class="table table-striped table-dark">
    <tr>
        <td>編號</td>
        <td>id</td>
        <td>name</td>
        <td>phone</td>
        <td>email</td>
        <td>address</td>
        <td>刪除</td>
        <td>修改</td>
    </tr>
    @{
        int count = 1;
        foreach (customer c in Model)
        {
    <tr>
        <td>@count.ToString()</td>
        <td>@c.id</td>
        <td>@c.name</td>
        <td>@c.phone</td>
        <td>@c.email</td>
        <td>@c.address</td>
        <td>@Html.ActionLink("刪除", "delete", "customer", new { fId = c.id }, new { OnClick = "return confirm('確定嗎?')" ,Class="btn btn-danger"})</td>
        <td>@Html.ActionLink("修改", "edit", "customer", new { fId = c.id },new { Class="btn btn-primary"})</td>
    </tr>
            count++;
        }
    }
</table>
<a href="~/customer/insertcus" class="btn btn-success">新增客戶</a>
