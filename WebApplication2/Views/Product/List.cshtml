@model IEnumerable<WebApplication2.tProject>

@{
    ViewBag.Title = "List";
    int count = 0;
}

<h2>上架商品</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
<table class="table">
    <tr>
        <th>
            序號
        </th>
        <th>
            image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fcost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fprice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    count++;
    <tr>
        <td>
            @count
        </td>
        <td>
            <img src="@item.fPhoto" width="300" height="300" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fQty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fcost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fprice)
        </td>
        <td>
            @Html.ActionLink("Edit", "edit", new { id = item.fid }) |           
        </td>
        <td>
            @Html.ActionLink("Del", "del", new { id = item.fid }, new { OnClick = "return confirm('確定嗎?')" })
        </td>
    </tr>
}

</table>
